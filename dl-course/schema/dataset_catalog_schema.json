{
  "description": "学習データセットのJSONスキーマ",
  "type": "object",
  "required": ["dataset"],
  "additionalProperties": false,
  "properties": {
    "dataset": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["classes", "pattern_id", "color_image_path", "label_image_path", "bounding_boxes"],
        "additionalProperties": false,
        "properties": {
          "classes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^[0-9]+$"
            }
          },
          "pattern_id": {
            "type": "string",
            "pattern": "^[0-9]+$"
          },
          "color_image_path": {
            "type": "string",
            "pattern": "\/[0-9]+\/color.bmp$"
          },
          "depth_image_path": {
            "type": "string",
            "pattern": "\/[0-9]+\/depth.bmp.bmp$"
          },
          "label_image_path": {
            "type": "string",
            "pattern": "\/[0-9]+\/label.bmp$"
          },
          "bounding_boxes": {
            "type": "array",
            "minItems": 0,
            "items": {
              "type": "object",
              "required": ["class", "x", "y", "width", "height"],
              "additionalProperties": false,
              "properties": {
                "class": {
                  "type": "string",
                  "pattern": "^[0-9]+$"
                },
                "x": {
                  "type": "string",
                  "pattern": "^[0-9]+$"
                },
                "y": {
                  "type": "string",
                  "pattern": "^[0-9]+$"
                },
                "width": {
                  "type": "string",
                  "pattern": "^[0-9]+$"
                },
                "height": {
                  "type": "string",
                  "pattern": "^[0-9]+$"
                }
              }
            }
          }
        }
      }
    }
  }
}
